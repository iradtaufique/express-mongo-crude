<h1>Edit Article</h1>

<div class="row">
    <div class="col-sm 8">
        <form method="post" action="/articles/edit/{{article._id}}">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" id="title" value="{{article.title}}">
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" name="author" class="form-control" id="author" value="{{article.author}}">
            </div>

            <div class="form-group">
                <label for="body">Body</label>
                <textarea class="form-control" name="body" id="body" rows="3">{{article.body}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
    </div>
</div>